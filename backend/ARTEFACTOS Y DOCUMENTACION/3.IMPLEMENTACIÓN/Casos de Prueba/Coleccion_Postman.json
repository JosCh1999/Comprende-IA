{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-a7b8-c9d0-e1f2a3b4c5d7",
		"name": "Proyecto Comprende-AI Backend API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "12345678"
	},
	"item": [
		{
			"name": "Autenticación",
			"item": [
				{
					"name": "Registrar Nuevo Usuario",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201 Created\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response is in JSON format\", function () {",
									"    pm.response.to.be.json;",
									"});",
									"",
									"pm.test(\"Body matches string and user is created\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.mensaje).to.eql(\"Usuario registrado exitosamente\");",
									"    pm.expect(jsonData.usuario.nombre).to.eql(\"Usuario Postman\");",
									"    pm.expect(jsonData.usuario.correo).to.eql(\"postman@example.com\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nombre\": \"Usuario Postman\",\n    \"email\": \"postman@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/auth/register",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"auth",
								"register"
							]
						}
					},
					"response": []
				},
				{
					"name": "Iniciar Sesión",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 OK\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Token is received and stored\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.usuario).to.have.property(\"token\");",
									"    // Store the token in a collection variable",
									"    pm.collectionVariables.set(\"authToken\", jsonData.usuario.token);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"postman@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"auth",
								"login"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Textos",
			"item": [
				{
					"name": "Crear Nuevo Texto",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201 Created\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Text created successfully message\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.mensaje).to.eql(\"Texto creado exitosamente\");",
									"});",
									"",
									"pm.test(\"Response body contains correct text details\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.texto.filename).to.eql(\"desde_postman.txt\");",
									"    pm.expect(jsonData.texto.content).to.eql(\"Este texto ha sido creado exitosamente desde Postman.\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{authToken}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"filename\": \"desde_postman.txt\",\n    \"content\": \"Este texto ha sido creado exitosamente desde Postman.\"\n}"
						},
						"url": {
							"raw": "http://localhost:4000/textos",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4000",
							"path": [
								"textos"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		}
	]
}
